{
  "name": "clean-node-api",
  "version": "2.0.1",
  "description": "NodeJs Rest Api using TDD, Clean Architecture and Typescript",
  "author": "Jos√© Justino Neto",
  "license": "ISC",
  "repository": "github.com/josejustino/clean-node-api",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "start": "node dist/main/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/main/server.ts",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "up": "npm i && npm run build && docker-compose up -d",
    "down": "docker-compose down",
    "lint": "eslint ./src --ext ts",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install",
    "test": "jest --silent --noStackTrace --runInBand",
    "test:verbose": "jest --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.ts",
    "test:integration": "npm test -- --watch -c jest-integration-config.ts",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.5.9",
    "@types/supertest": "^2.0.15",
    "@types/validator": "^13.11.2",
    "coveralls": "^3.1.1",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.0",
    "jest": "^29.6.4",
    "lint-staged": "^15.2.10",
    "mockdate": "^3.0.5",
    "rimraf": "^6.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongodb": "^5.9.1",
    "validator": "^13.11.0"
  },
  "_moduleAliases": {
    "@": "dist" 
  }
}
